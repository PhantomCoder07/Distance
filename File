#include <stdio.h>
#include <math.h>
int main()
{
    FILE *file1,*file2;
    float x1,y1,x2,y2,p1,p2,dis;
    char ch;
    file1 = fopen ("Distance.txt","w");
    file2 = fopen ("Distance.txt","r");
    if (file1==NULL)
        printf ("The file does not exist");
    else
    {
        printf ("Enter point a: ");
        scanf ("%f %f",&x1,&y1);
        printf ("Enter point b: ");
        scanf ("%f %f",&x2,&y2);
        p1= (x1-x2)*(x1-x2);
        p2= (y1-y2)*(y1-y2);
        dis= sqrt(p1+p2);
        fprintf (file1,"The distance between a and b is: %.2f",dis);
        fclose (file1);
    }
    if (file2==NULL)
        printf ("The file does not exist");
    else
    {
        while (!feof(file2))
        {
            ch= fgetc (file2);
            printf ("%c",ch);
        }
        fclose (file2);
    }
    return 0;
}
