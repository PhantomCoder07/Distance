#include <stdio.h>
#include <math.h>
float dis (float x1, float x2, float y1, float y2)
{
    float p1=(x1-x2)*(x1-x2);
    float p2=(y1-y2)*(y1-y2);
    return sqrt(p1+p2);
}
int main()
{
    float x1,y1,x2,y2;
    printf ("Enter point a: ");
    scanf ("%f %f",&x1,&y1);
    printf ("Enter point b: ");
    scanf ("%f %f",&x2,&y2);
    printf ("The distance between a and b is: %.2f",dis(x1,x2,y1,y2));
    return 0;
}
